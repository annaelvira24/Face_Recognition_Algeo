<StartPage>:
    ##filename di kiri untuk diakses di main : filename di kanan sesuai dengan id
    filename : filename
    FloatLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'background2.png'
        Label:
            text:"Upload the photo"
            pos_hint: {"x":0.3, "top":0.7}
            size_hint: 0.4, 0.05
            font_size: 20
        TextInput:
            pos_hint: {"x":0.3, "top":0.6}
            size_hint: 0.4, 0.05
            id: filename 
            # multiline: False
            hint_text:"filename.jpg/.png"
        Button:
            text:"Back"
            background_normal: ''
            background_color: 0.008, 0.463, 0.694, 1
            pos_hint: {"x":0.25,"top":0.3}
            size_hint:(0.25,0.08)
            on_press: root.manager.current='landing'
        Button:
            text:"Upload"
            background_normal: ''
            background_color: 0.008, 0.463, 0.694, 1
            pos_hint: {"x":0.55, "top":0.3}
            size_hint:(0.25,0.08)
            on_press: root.manager.current='landing'
        



                

                     

                        
    
