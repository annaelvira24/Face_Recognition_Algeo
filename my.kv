<LandingPage>
    FloatLayout:
        
        Image:
            source: 'homepage.png'
            keep_ratio: True
            allow_stretch: True
            opacity: 0.8
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}

        Button:
            text: "Getting Started"
            background_normal: ''
            background_color: 0.008, 0.463, 0.694, 1
            size_hint:(0.25,0.08)
            pos_hint: {'center_x': 0.5, 'center_y': 0.28}
            on_press: root.manager.current='start'
        Button: 
            background_normal: ''
            background_color: 0.008, 0.463, 0.694, 1
            text: "Credits"
            size_hint:(0.25,0.08)
            pos_hint: {'center_x': 0.5, 'center_y': 0.18}
            on_press: root.manager.current='credits'
        Button:
            text : "Quit"
            background_normal: ''
            background_color: 0.008, 0.463, 0.694, 1
            size_hint:(0.25,0.08)
            pos_hint: {'center_x': 0.5, 'center_y': 0.08}
            on_press: app.Exit()

